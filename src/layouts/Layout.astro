---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-primary: #342152;
		--color-secondary: #271248;
		--color-background: #171717;
		--color-foreground: #eeeeee;
		--color-foreground-7: #eeeeee0d;
	}

	@font-face {
		font-family: "Poppins";
		src: url("/fonts/poppins/Poppins.ttf") format("truetype");
		font-display: swap;
		font-style: normal;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	html {
		background: radial-gradient(
			90% 40% at 50% 10%,
			var(--color-primary) 0%,
			var(--color-background) 85%
		);
		color: var(--color-foreground);
		font-family: Poppins;
	}

	body {
		margin-inline: auto;
		width: 800px;
	}
</style>
