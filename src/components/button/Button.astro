---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}
const props = Astro.props;

const classList = [
    "cursor-pointer py-2 px-4 rounded-xl flex gap-2 transition-all duration-200 ease-in-out hover:opacity-80",
    ,
    props.class,
];
---

<a {...props} class:list={classList}>
    <slot />
</a>

<style>
    a {
        background-color: var(--color-primary);
        color: var(--color-foreground);
    }
</style>
