---
import Badge from "./Badge.astro";
import TimeStamp from "./TimeStamp.astro";

interface Props {
    education: {
        school: string;
        field: string;
        description: string;
        grade: number | null;
        dates: {
            start: string;
            end?: string;
        };
    };
}

const { school, field, grade, description, dates } = Astro.props.education;
---

<article class="flex flex-row gap-6 py-5">
    <TimeStamp startDate={dates.start} endDate={dates.end} />
    <div class="flex flex-col">
        <div class="flex flex-row justify-between pb-5">
            <header>
                <h3 class="text-2xl text-wrap">{field}</h3>
                <h4 class="text-xl">{school}</h4>
            </header>
            {
                grade && (
                    <div>
                        <Badge>{grade}</Badge>
                    </div>
                )
            }
        </div>
        <p>{description}</p>
    </div>
</article>
