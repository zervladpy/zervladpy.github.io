---
import { sections } from "@lib/section";
import { i18n } from "@lib/i18n";

const { en } = i18n;

import Layout from "@layouts/Layout.astro";

import Header from "@components/section/Header.astro";
import Hero from "@components/section/Hero.astro";
import Experience from "@components/section/Experience.astro";
import Education from "@components/section/Education.astro";
import Projects from "@components/section/Projects.astro";
import Skills from "@components/section/Skills.astro";
import Footer from "@components/section/Footer.astro";
import Section from "@components/section/Section.astro";

import {
    hero,
    social,
    experiences,
    educations,
    projects,
    about,
    skills,
} from "cv.json";
import About from "@components/section/About.astro";
---

<Layout
    title="Vladislav Zernov - Software Engineer"
    description={hero.description}
    locale="en"
>
    <Header
        links={[
            { label: en.nav.me, href: `#${sections.hero.id}` },
            {
                label: en.nav.experience,
                href: `#${sections.experience.id}`,
            },
            { label: en.nav.education, href: `#${sections.education.id}` },
            { label: en.nav.projects, href: `#${sections.projects.id}` },
            { label: en.nav.skills, href: `#${sections.skills.id}` },
            { label: en.nav.about, href: `#${sections.about.id}` },
        ]}
    />
    <Section id={sections.hero.id} class="mt-5">
        <Hero content={hero} social={social} />
    </Section>
    <Section id={sections.experience.id} title={en.nav.experience}>
        <Experience experiences={experiences} />
    </Section>
    <Section id={sections.education.id} title={en.nav.education}>
        <Education educations={educations} />
    </Section>
    <Section id={sections.projects.id} title={en.nav.projects}>
        <Projects projects={projects} />
    </Section>
    <Section id={sections.skills.id} title={en.nav.skills}>
        <Skills skills={skills} />
    </Section>
    <Section id={sections.about.id} title={en.nav.about}>
        <About about={about} />
    </Section>
    <Footer social={social} mail={hero.mail} />
</Layout>
